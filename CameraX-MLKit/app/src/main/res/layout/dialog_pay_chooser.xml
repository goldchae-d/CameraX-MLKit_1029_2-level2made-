<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:cardCornerRadius="24dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ì œëª© -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <!-- ðŸ‘‡ ì—¬ê¸° id ì¶”ê°€ -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_subtitle"
            android:textColor="@color/tile_subtext"
            android:textSize="13sp"
            android:paddingBottom="12dp"/>

        <!-- 2x2 ê·¸ë¦¬ë“œ -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <!-- ê³„ì¢Œ QR -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnAccountQr"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/tile_bg"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_qr_24"
                        app:tint="@color/tile_text"
                        android:contentDescription="@string/label_account_qr"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_account_qr"
                        android:textColor="@color/tile_text"
                        android:paddingTop="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ì•±ì—ì„œ ìŠ¤ìº” -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnInApp"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/tile_bg"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_scan_24"
                        app:tint="@color/tile_text"
                        android:contentDescription="@string/label_inapp_scan"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_inapp_scan"
                        android:textColor="@color/tile_text"
                        android:paddingTop="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ì¹´ì¹´ì˜¤íŽ˜ì´ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnKakao"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/kakao_yellow"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_kakao_24"
                        app:tint="@color/kakao_black"
                        android:contentDescription="@string/label_kakaopay"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_kakaopay"
                        android:textColor="@color/kakao_black"
                        android:paddingTop="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ë„¤ì´ë²„íŽ˜ì´ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnNaver"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/naver_green"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_naver_24"
                        app:tint="@color/white"
                        android:contentDescription="@string/label_naverpay"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_naverpay"
                        android:textColor="@color/white"
                        android:paddingTop="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
